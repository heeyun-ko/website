---
import type { CollectionEntry } from 'astro:content';

interface Props {
	title: string;
	description: string;
	pubDate: Date;
	updatedDate?: Date;
	heroImage?: string;
	meta_title?: string;
	meta_description?: string;
	keywords?: string[];
	og_title?: string;
	og_description?: string;
	og_type?: string;
	twitter_card?: string;
}

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<article>
	{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
	<h1 class="title">{title}</h1>
	<div class="prose">
		<slot />
	</div>
</article>

<style>
	.title {
		font-size: 2.5em;
		margin: 0.25em 0 0;
	}

	.prose {
		width: 100%;
		max-width: none;
		margin: 0 auto;
	}

	img {
		width: 100%;
		height: auto;
		border-radius: 12px;
		margin: 2em 0;
	}
</style> 