---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

// 디버깅을 위한 로그 추가
const portfolioEntries = await getCollection('portfolio');
console.log('All entries:', portfolioEntries);

const filteredEntries = portfolioEntries.filter(entry => {
	console.log('Entry:', entry.slug, 'Published:', entry.data.published);
	return entry.data.published === true;
});
console.log('Filtered entries:', filteredEntries);

const sortedPortfolioEntries = filteredEntries.sort((a, b) => 
	new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);
console.log('Sorted entries:', sortedPortfolioEntries);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Portfolio</h1>
				<div class="grid">
					{
						sortedPortfolioEntries.map((post) => (
							<div class="project-card">
								<a href={`/portfolio/${post.slug}/`}>
									{post.data.heroImage && (
										<img src={post.data.heroImage} alt={post.data.title} />
									)}
									<h2>{post.data.title}</h2>
									<p>{post.data.description}</p>
									<p>
										<FormattedDate date={new Date(post.data.pubDate)} />
									</p>
								</a>
							</div>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html> 