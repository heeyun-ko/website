---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = await getCollection('portfolio', ({ data }) => {
	return data.published !== false;
});

console.log('All entries:', posts);
const filteredPosts = posts.filter(post => post.data.published);
console.log('Filtered entries:', filteredPosts);
const sortedPosts = filteredPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
console.log('Sorted entries:', sortedPosts);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
					{
						sortedPosts.map((post) => (
							<div class="border p-4 rounded-lg">
								<a href={`/portfolio/${post.slug}/`}>
									{post.data.heroImage && (
										<img src={post.data.heroImage} alt={post.data.title} />
									)}
									<h2>{post.data.title}</h2>
									<p>{post.data.description}</p>
									<p>
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</div>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html> 