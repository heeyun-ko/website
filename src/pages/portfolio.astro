---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

// 수정된 부분: published가 true인 항목만 가져오기
const portfolioEntries = await getCollection('portfolio', ({ data }) => {
	return data.published === true;
});

// 날짜순 정렬 추가
const sortedPortfolioEntries = portfolioEntries.sort((a, b) => 
	new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>Portfolio</h1>
				<div class="grid">
					{
						sortedPortfolioEntries.map((post) => (  // portfolioEntries를 sortedPortfolioEntries로 변경
							<div class="project-card">
								<a href={`/portfolio/${post.slug}/`}>  <!-- URL 경로 수정 -->
									{/* 나머지 코드 */}
								</a>
							</div>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html> 