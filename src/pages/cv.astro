---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`CV - ${SITE_TITLE}`} description="Curriculum Vitae of Heeyun Ko" />
	</head>
	<body>
		<Header />
		<main>
			<div class="cv-container">
				<div class="cv-header">
					<h1>Curriculum Vitae</h1>
					<p class="subtitle">Heeyun Ko</p>
				</div>

				<section class="cv-section">
					<h2>Education</h2>
					<div class="timeline">
						<div class="timeline-item">
							<div class="timeline-date">2020 - Present</div>
							<div class="timeline-content">
								<h3>Chung-Ang University College of Medicine</h3>
								<p>Bachelor of Medicine</p>
							</div>
						</div>
					</div>
				</section>

				<section class="cv-section">
					<h2>Research Experience</h2>
					<div class="timeline">
						<div class="timeline-item">
							<div class="timeline-date">2024 - Present</div>
							<div class="timeline-content">
								<h3>IBS Center for Neuroscience Imaging Research</h3>
								<p>Research Assistant</p>
								<ul>
									<li>Working on consciousness and computational neuroscience</li>
									<li>Conducting research under Prof. Hakwan Lau</li>
								</ul>
							</div>
						</div>
						<div class="timeline-item">
							<div class="timeline-date">2023</div>
							<div class="timeline-content">
								<h3>Chung-Ang University Neurogenomics Lab</h3>
								<p>Research Intern</p>
								<ul>
									<li>Learned nucleic acid extraction and PCR techniques</li>
									<li>Gained hands-on experience in molecular biology</li>
								</ul>
							</div>
						</div>
					</div>
				</section>

				<section class="cv-section">
					<h2>Professional Experience</h2>
					<div class="timeline">
						<div class="timeline-item">
							<div class="timeline-date">2023</div>
							<div class="timeline-content">
								<h3>Seoul National University JW Lee Global Medical Center</h3>
								<p>Intern</p>
								<ul>
									<li>Explored global health issues</li>
									<li>Gained international healthcare experience</li>
								</ul>
							</div>
						</div>
					</div>
				</section>

				<section class="cv-section">
					<h2>Projects & Achievements</h2>
					<div class="achievements-grid">
						<div class="achievement-card">
							<h3>NeuroXi Community</h3>
							<p>Founder of a neuroscience community focusing on computational neuroscience and brain-computer interfaces</p>
						</div>
						<div class="achievement-card">
							<h3>Digital Healthcare Hackathon 2023</h3>
							<p>AI Center Director's Award for innovative approach to rare disease diagnosis using LLM</p>
						</div>
						<div class="achievement-card">
							<h3>Startup Experience</h3>
							<p>Founded 'Aphrodot' and developed 'GodJam' sleep consulting service</p>
						</div>
					</div>
				</section>

				<section class="cv-section">
					<h2>Skills</h2>
					<div class="skills-grid">
						<div class="skill-category">
							<h3>Research</h3>
							<ul>
								<li>Molecular Biology Techniques</li>
								<li>Neuroscience Research</li>
								<li>Data Analysis</li>
							</ul>
						</div>
						<div class="skill-category">
							<h3>Technical</h3>
							<ul>
								<li>Python</li>
								<li>Data Visualization</li>
								<li>Project Management</li>
							</ul>
						</div>
						<div class="skill-category">
							<h3>Languages</h3>
							<ul>
								<li>Korean (Native)</li>
								<li>English (Professional)</li>
							</ul>
						</div>
					</div>
				</section>

				<section class="cv-section">
					<h2>Contact</h2>
					<div class="contact-info">
						<p><strong>Email:</strong> <a href="mailto:eindel1217@gmail.com">eindel1217@gmail.com</a></p>
						<p><strong>LinkedIn:</strong> <a href="https://www.linkedin.com/in/heeyunko-42b517256/" target="_blank">linkedin.com/in/heeyunko-42b517256/</a></p>
					</div>
				</section>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: 100%;
		max-width: 960px;
		margin: 0 auto;
		padding: 3rem 1rem;
		margin-top: 160px;
	}

	.cv-container {
		max-width: 800px;
		margin: 0 auto;
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}

	.cv-header {
		text-align: center;
		margin-bottom: 3rem;
		padding-bottom: 2rem;
		border-bottom: 2px solid rgb(var(--primary));
	}

	.cv-header h1 {
		font-size: 2.5rem;
		color: rgb(var(--primary));
		margin: 0;
	}

	.subtitle {
		font-size: 1.5rem;
		color: rgb(var(--gray));
		margin: 1rem 0 0;
	}

	.cv-section {
		margin-bottom: 2.5rem;
	}

	.cv-section h2 {
		font-size: 1.8rem;
		color: rgb(var(--primary));
		margin-bottom: 1.5rem;
		padding-bottom: 0.5rem;
		border-bottom: 1px solid rgb(var(--gray));
	}

	.timeline {
		position: relative;
		padding-left: 2rem;
	}

	.timeline::before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		bottom: 0;
		width: 2px;
		background: rgb(var(--primary));
	}

	.timeline-item {
		position: relative;
		margin-bottom: 2rem;
		padding-left: 1.5rem;
	}

	.timeline-item::before {
		content: '';
		position: absolute;
		left: -0.5rem;
		top: 0.5rem;
		width: 1rem;
		height: 1rem;
		background: rgb(var(--primary));
		border-radius: 50%;
	}

	.timeline-date {
		font-weight: bold;
		color: rgb(var(--primary));
		margin-bottom: 0.5rem;
	}

	.timeline-content h3 {
		font-size: 1.3rem;
		margin: 0 0 0.5rem;
	}

	.timeline-content ul {
		margin: 0.5rem 0 0;
		padding-left: 1.5rem;
	}

	.timeline-content li {
		margin-bottom: 0.3rem;
	}

	.achievements-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.achievement-card {
		background: rgb(var(--light-gray));
		padding: 1.5rem;
		border-radius: 8px;
		transition: transform 0.2s;
	}

	.achievement-card:hover {
		transform: translateY(-2px);
	}

	.achievement-card h3 {
		font-size: 1.2rem;
		color: rgb(var(--primary));
		margin: 0 0 0.8rem;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
	}

	.skill-category h3 {
		font-size: 1.2rem;
		color: rgb(var(--primary));
		margin-bottom: 1rem;
	}

	.skill-category ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.skill-category li {
		margin-bottom: 0.5rem;
		padding-left: 1.5rem;
		position: relative;
	}

	.skill-category li::before {
		content: 'â€¢';
		color: rgb(var(--primary));
		position: absolute;
		left: 0;
	}

	.contact-info {
		background: rgb(var(--light-gray));
		padding: 1.5rem;
		border-radius: 8px;
	}

	.contact-info p {
		margin: 0.5rem 0;
	}

	.contact-info a {
		color: rgb(var(--primary));
		text-decoration: none;
		transition: color 0.2s;
	}

	.contact-info a:hover {
		color: rgb(var(--primary-dark));
	}

	@media (max-width: 768px) {
		main {
			padding: 2rem 1rem;
			margin-top: 120px;
		}

		.cv-container {
			padding: 1.5rem;
		}

		.cv-header h1 {
			font-size: 2rem;
		}

		.subtitle {
			font-size: 1.2rem;
		}

		.cv-section h2 {
			font-size: 1.5rem;
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 1.5rem 1rem;
		}

		.cv-container {
			padding: 1rem;
		}

		.timeline {
			padding-left: 1.5rem;
		}

		.achievements-grid {
			grid-template-columns: 1fr;
		}
	}
</style> 