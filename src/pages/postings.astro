---
import BlogCard from '../components/BlogCard.astro';

const posts = [
  { title: "첫 번째 포스트", description: "이것은 첫 번째 글의 설명입니다.", date: new Date("2024-03-18"), slug: "first-post" },
  { title: "두 번째 포스트", description: "이것은 두 번째 글의 설명입니다.", date: new Date("2024-03-19"), slug: "second-post" },
  { title: "세 번째 포스트", description: "이것은 세 번째 글의 설명입니다.", date: new Date("2024-03-20"), slug: "third-post" }
];
---

<section class="postings">
  {posts.map(post => (
    <BlogCard title={post.title} description={post.description} date={post.date} slug={post.slug} />
  ))}
</section>

<style>
  .postings {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    padding: 2rem;
  }
</style>
