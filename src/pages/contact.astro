---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const title = `Documents - ${SITE_TITLE}`;
const description = "View our important documents and resources in PDF format.";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<Header />
		<main>
			<div class="pdf-container">
				<div class="pdf-content">
					<h1>Documents</h1>
					<iframe src="/documents/HeeyunKo_Resume.pdf" class="pdf-viewer" frameborder="0" scrolling="no" width="100%" height="800px" title="Resume Document"></iframe>
				</div>
			</div>
		</main>
		<Footer />
		<nav>
			<ul>
				<li><a href="/documents/HeeyunKo_Resume.pdf" target="_blank">Download PDF</a></li>
			</ul>
		</nav>
	</body>
</html>

<style>
	.pdf-container {
		min-height: calc(100vh - 16rem);
		padding: 4rem 2rem;
	}

	.pdf-content {
		max-width: 720px;
		margin: 0 auto;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		color: rgb(var(--black));
		font-family: var(--font-heading);
		font-weight: 700;
		letter-spacing: -0.02em;
	}

	.pdf-viewer {
		border: 1px solid #ddd;
		border-radius: 8px;
		margin-top: 1rem;
		width: 100%;
		height: 80vh;
		overflow: hidden;
	}

	nav ul {
		list-style-type: none;
		padding: 0;
		margin-top: 2rem;
		text-align: center;
	}

	nav ul li {
		display: inline-block;
		margin: 0 1.5rem;
	}

	nav ul li a {
		text-decoration: none;
		color: rgb(var(--blue));
		font-weight: bold;
	}

	@media (max-width: 768px) {
		.pdf-container {
			padding: 2rem 1rem;
		}

		h1 {
			font-size: 2rem;
		}

		.pdf-viewer {
			height: 60vh;
		}
	}
</style>
