---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Outfit:wght@300;400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="hero-content">
					<h1>Eindel's log</h1>
					<p class="hero-subtitle">Eindel is passionate to a lot of things in the world XD.</p>
					<a href="#cards" class="cta-button">Continue to Read</a>
				</div>
				<div class="hero-image">
					<img src="/header-bg.jpg" alt="Minimalistic art with rounded corners featuring green, pink, and blue shapes" />
					<div class="gradient-overlay"></div>
				</div>
			</section>

			<section class="content">
				<div class="content-wrapper">
					<h2>Get inspiration from her</h2>
					<p class="tagline">
						Designing your life That can<br/>
						be consistent.
					</p>
					<div class="scroll-indicator">
						<div class="circle">
							<div class="dot"></div>
						</div>
					</div>
				</div>
			</section>

			<section class="cards" id="cards">
				<div class="card-grid">
					<div class="card">
						<img src="/images/workspace.jpg" alt="Workspace setup with multiple monitors" />
						<div class="card-content">
							<h3>Design<br/>Development</h3>
							<p>Creating an efficient and comfortable workspace for productivity and creativity.</p>
						</div>
					</div>
					<div class="card">
						<img src="/images/mickey-white.jpg" alt="White Mickey Mouse shaped device" />
						<div class="card-content">
							<h3>Design<br/>Development</h3>
							<p>Finding joy in simple and elegant design elements that bring a touch of magic to everyday life.</p>
						</div>
					</div>
					<div class="card">
						<img src="/images/selfie.jpg" alt="Eindel's casual selfie" />
						<div class="card-content">
							<h3>Design<br/>Development</h3>
							<p>Exploring self-expression through minimalist style and natural moments.</p>
						</div>
					</div>
					<div class="card">
						<img src="/images/winter-style.jpg" alt="Winter fashion mirror selfie" />
						<div class="card-content">
							<h3>Design<br/>Development</h3>
							<p>Embracing personal style with cozy winter fashion and soft color palettes.</p>
						</div>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	:root {
		--primary-color: #8FA969;
		--text-color: #291F1E;
		--bg-color: #FFC9C5;
		--nav-bg: #FFFCF0;
		--white: #FFFFFF;
		--dark: #1E1E1E;
	}

	body {
		margin: 0;
		padding: 0;
		font-family: 'Outfit', sans-serif;
		background: var(--bg-color);
	}

	.hero {
		position: relative;
		height: 1000px;
		overflow: hidden;
		margin-top: 0;
	}

	.hero-image {
		position: absolute;
		width: 100%;
		height: 100%;
		top: 0;
	}

	.hero-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	.gradient-overlay {
		position: absolute;
		width: 100%;
		height: 664.97px;
		bottom: 0;
		background: linear-gradient(180deg, rgba(30, 30, 30, 0) 0%, rgba(30, 30, 30, 0.70) 55%, #1E1E1E 100%);
		opacity: 0.4;
	}

	.hero-content {
		position: absolute;
		left: 143.33px;
		bottom: 143.33px;
		z-index: 1;
		color: var(--white);
		padding-top: 80px;
	}

	.hero-content h1 {
		font-family: 'Playfair Display', serif;
		font-size: 83.61px;
		font-weight: 600;
		line-height: 100.33px;
		margin: 0;
	}

	.hero-subtitle {
		font-size: 28.67px;
		line-height: 34.40px;
		margin: 0;
	}

	.cta-button {
		display: inline-flex;
		padding: 9.56px 19.11px;
		background: var(--white);
		color: var(--dark);
		text-decoration: none;
		font-size: 16.72px;
		margin-top: 20px;
		transition: all 0.3s ease;
	}

	.cta-button:hover {
		background: rgba(255, 255, 255, 0.9);
		transform: translateY(-2px);
	}

	.content {
		padding: 120px 143.33px 300px;
		position: relative;
		background: #FFFCF0;
		margin: 0;
	}

	.content-wrapper {
		max-width: 836.11px;
		position: relative;
		z-index: 1;
		margin: 0 auto;
	}

	.content h2 {
		font-family: 'Playfair Display', serif;
		font-size: 80px;
		font-weight: 400;
		line-height: 80px;
		color: var(--text-color);
		margin: 0;
	}

	.tagline {
		font-size: 28.67px;
		line-height: 34.40px;
		color: #FF0000;
		font-weight: 700;
		margin: 20px 0;
	}

	.cards {
		padding: 0 143.33px;
		margin-bottom: 100px;
		display: flex;
		justify-content: center;
		margin-top: 50px;
		position: relative;
		z-index: 2;
	}

	.card-grid {
		display: flex;
		gap: 35.83px;
		justify-content: center;
		max-width: 1433.33px;
		margin: 0 auto;
	}

	.card {
		position: relative;
		z-index: 2;
		width: 382.22px;
		background: var(--white);
		display: flex;
		flex-direction: column;
		overflow: hidden;
	}

	.card img {
		width: 100%;
		height: 453.89px;
		object-fit: cover;
		object-position: center;
		display: block;
		margin: 0;
	}

	.card-content {
		padding: 23.89px;
		background: var(--white);
	}

	.card-content h3 {
		font-family: 'Playfair Display', serif;
		font-size: 28.67px;
		font-weight: 700;
		line-height: 35.83px;
		color: var(--text-color);
		margin: 0 0 19.11px 0;
	}

	.card-content p {
		font-size: 19.11px;
		line-height: 26.76px;
		color: var(--text-color);
		opacity: 0.7;
		margin: 0;
	}

	@media (max-width: 768px) {
		.hero-content {
			left: 20px;
			right: 20px;
		}

		.hero-content h1 {
			font-size: 48px;
			line-height: 1.2;
		}

		.content {
			padding: 60px 20px 200px;
			margin: 0;
		}

		.content h2 {
			font-size: 48px;
			line-height: 1.2;
		}

		.cards {
			margin-top: 30px;
			padding: 0 20px;
		}

		.card-grid {
			flex-direction: column;
			align-items: center;
		}

		.card {
			width: 100%;
			max-width: 382.22px;
		}
	}

	html {
		scroll-behavior: smooth;
	}
</style>
