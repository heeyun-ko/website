---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';

// Get all blog posts
const posts = await getCollection('posts');

// SEO metadata
const pageTitle = `Blog Posts - ${SITE_TITLE}`;
const pageDescription = `Explore our collection of blog posts about ${SITE_DESCRIPTION}`;
const keywords = ['blog', 'posts', 'articles', 'thoughts', 'ideas'];
const ogType = 'website';
const twitterCard = 'summary_large_image';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead 
			title={pageTitle}
			description={pageDescription}
			keywords={keywords}
			og_type={ogType}
			twitter_card={twitterCard}
		/>
	</head>
	<body>
		<Header />
		<main>
			<article class="content">
				<header class="hero">
					<h1>Blog Posts</h1>
					<p class="tagline">
						Thoughts, Ideas, and Explorations
					</p>
				</header>

				<section class="posts" aria-label="Blog posts collection">
					<div class="posts-grid">
						{posts.map((post) => (
							<BlogCard
								title={post.data.title}
								description={post.data.description}
								date={post.data.date}
								slug={`/posts/${post.slug}`}
							/>
						))}
					</div>
				</section>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: 100%;
		max-width: 960px;
		margin: 0 auto;
		padding-top: 800px;
		padding-bottom: 3rem;
		padding-inline: 1rem;
		display: flex;
		flex-direction: column;
		gap: 4rem;
	}

	.content {
		width: 100%;
	}

	.hero {
		text-align: center;
		padding: 2rem 0;
		margin-bottom: 2rem;
	}

	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1.2;
		margin-bottom: 1.5rem;
		color: rgb(var(--black));
	}

	.tagline {
		font-size: 1.5rem;
		color: rgb(var(--gray-dark));
		margin-bottom: 2rem;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	@media (max-width: 768px) {
		main {
			padding-top: 600px;
			padding-bottom: 2rem;
			padding-inline: 1rem;
			gap: 3rem;
		}

		h1 {
			font-size: 2.5rem;
		}

		.tagline {
			font-size: 1.25rem;
		}

		.posts-grid {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 1.5rem 1rem;
			gap: 2.5rem;
		}

		h1 {
			font-size: 2rem;
		}

		.tagline {
			font-size: 1.1rem;
		}
	}
</style> 