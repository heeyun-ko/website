---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';

// Get all blog posts
const posts = await getCollection('posts');
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Posts - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>Posts</h1>
				<p class="tagline">
					Thoughts, Ideas, and Explorations
				</p>
			</section>

			<section class="posts">
				<div class="posts-grid">
					{posts.map((post) => (
						<BlogCard
							title={post.data.title}
							description={post.data.description}
							date={new Date(post.data.date)}
							url={`/posts/${post.slug}`}
						/>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: 100%;
		max-width: 960px;
		margin: 0 auto;
		padding: 3rem 1rem;
		display: flex;
		flex-direction: column;
		gap: 4rem;
	}

	section {
		width: 100%;
	}

	.hero {
		text-align: center;
		padding: 2rem 0;
	}

	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1.2;
		margin-bottom: 1.5rem;
	}

	.tagline {
		font-size: 1.5rem;
		color: rgb(var(--gray-dark));
		margin-bottom: 2rem;
	}

	.posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	@media (max-width: 768px) {
		main {
			padding: 2rem 1rem;
			gap: 3rem;
		}

		h1 {
			font-size: 2.5rem;
		}

		.tagline {
			font-size: 1.25rem;
		}

		.posts-grid {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 1.5rem 1rem;
			gap: 2.5rem;
		}

		h1 {
			font-size: 2rem;
		}

		.tagline {
			font-size: 1.1rem;
		}
	}
</style> 