---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('posts')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// SEO metadata
const pageTitle = `Blog Posts - ${SITE_TITLE}`;
const pageDescription = `Explore our collection of blog posts about ${SITE_DESCRIPTION}`;
const keywords = ['blog', 'posts', 'articles', 'thoughts', 'ideas'];
const ogType = 'website';
const twitterCard = 'summary_large_image';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead 
			title={pageTitle} 
			description={pageDescription} 
			keywords={keywords}
			ogType={ogType}
			twitterCard={twitterCard}
		/>
	</head>
	<body>
		<Header />
		<div class="page-container">
			<main>
				<section>
					<ul>
						{
							posts.map((post) => (
								<li>
									<a href={`/posts/${post.slug}/`}>
										<div class="post-card">
											{post.data.heroImage && (
												<img 
													src={post.data.heroImage} 
													alt="" 
													class="post-image"
												/>
											)}
											<div class="post-content">
												<h4 class="post-title">{post.data.title}</h4>
												<p class="post-date">
													<FormattedDate date={post.data.pubDate} />
												</p>
												<p class="post-description">{post.data.description}</p>
											</div>
										</div>
									</a>
								</li>
							))
						}
					</ul>
				</section>
			</main>
			<Footer />
		</div>
	</body>
</html>

<style>
	.page-container {
		position: relative;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}
	main {
		width: 100%;
		max-width: 960px;
		margin: 0 auto;
		padding: 3rem 1rem;
		margin-top: 180px;
		flex: 1;
	}
	ul {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 2rem;
		list-style-type: none;
		margin: 0;
		padding: 0;
	}
	.post-card {
		border: 1px solid rgba(var(--gray), 0.2);
		border-radius: 8px;
		overflow: hidden;
		transition: transform 0.2s ease;
		height: 100%;
		display: flex;
		flex-direction: column;
		background-color: #FFF0F5;  /* 라벤더 블러시 - 더 연한 핑크색 */
	}
	.post-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}
	.post-image {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}
	.post-content {
		padding: 1.5rem;
		flex-grow: 1;
		display: flex;
		flex-direction: column;
	}
	.post-title {
		margin: 0;
		font-size: 1.25rem;
		font-weight: 600;
		color: rgb(var(--black));
	}
	.post-date {
		margin: 0.5rem 0;
		color: rgb(var(--gray));
		font-size: 0.875rem;
	}
	.post-description {
		margin: 0;
		color: rgb(var(--gray-dark));
		font-size: 0.95rem;
		line-height: 1.5;
	}
	a {
		text-decoration: none;
	}
	@media (max-width: 720px) {
		ul {
			grid-template-columns: 1fr;
		}
	}
</style>
