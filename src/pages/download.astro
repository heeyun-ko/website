---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const title = `Download CV - ${SITE_TITLE}`;
const description = "Download Heeyun Ko's resume as a PDF document.";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<Header buttonLabel="Download" />
		<main>
			<div class="pdf-container">
				<div class="pdf-content">
					<h1>Download CV</h1>
					<p class="underline-text">Click the button below to download the <strong>CV</strong> as a PDF file:</p>
					<a href="/cv.pdf" class="download-btn" target="_blank">Download CV</a>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.pdf-container {
		min-height: calc(100vh - 16rem);
		padding: 4rem 2rem;
		text-align: center;
	}

	.pdf-content {
		max-width: 720px;
		margin: 0 auto;
	}

	.underline-text {
		text-decoration: underline;
		margin-bottom: 1.5rem;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.download-btn {
		display: inline-block;
		margin-top: 2rem;
		padding: 1rem 2rem;
		font-size: 1.2rem;
		color: #FFB6C1;
		background-color: transparent;
		text-decoration: none;
		border-radius: 8px;
		border: 2px solid #FFB6C1;
		transition: all 0.3s ease;
	}

	.download-btn:hover {
		background-color: #FFC0CB;
		color: white;
		transform: translateY(-2px);
	}

	.download-link {
		display: inline-block;
		color: #ff0000;
		text-decoration: none;
		font-size: 1.2rem;
		margin-top: 1rem;
		transition: color 0.3s ease;
	}

	.download-link:hover {
		color: #ff3333;
	}
</style>
