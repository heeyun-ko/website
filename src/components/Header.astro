---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
import { getUrl } from '../utils/url';
---

<header>
	<nav>
		<div class="nav-wrapper">
			<div class="nav-brand">
				<a href={getUrl('/')} class="brand-link">
					<div class="brand-icon">
						<img src={getUrl('/icon.png')} alt="Blog Logo" width="24" height="24" />
					</div>
					<span class="brand-text">{SITE_TITLE}</span>
				</a>
			</div>

			<div class="nav-links">
				<HeaderLink href={getUrl('/')}>Main</HeaderLink>
				<HeaderLink href={getUrl('/documents/HeeyunKo_Resume.pdf')} target="_blank">CV Download</HeaderLink>
			</div>

			<div class="nav-actions">
				<ThemeToggle />
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: rgba(var(--gray-light), 0.85);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		border-bottom: 1px solid rgba(var(--gray), 0.1);
		transition: var(--theme-transition);
	}

	nav {
		height: 4rem;
		padding: 0 1.5rem;
	}

	.nav-wrapper {
		max-width: 1200px;
		height: 100%;
		margin: 0 auto;
		display: grid;
		grid-template-columns: auto 1fr auto;
		align-items: center;
		gap: 2rem;
	}

	.nav-brand {
		display: flex;
		align-items: center;
		min-width: 0;
	}

	.brand-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		color: rgb(var(--black));
		font-weight: 600;
		padding: 0.5rem;
		margin: -0.5rem;
		border-radius: 0.75rem;
		transition: all 0.2s ease;
	}

	.brand-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2.25rem;
		height: 2.25rem;
		background: rgba(var(--gray-light), 0.5);
		border-radius: 0.85rem;
		padding: 0.25rem;
		flex-shrink: 0;
	}

	.brand-text {
		font-size: 1.125rem;
		font-weight: 600;
		letter-spacing: -0.01em;
		color: rgb(var(--black));
	}

	.nav-links {
		display: flex;
		gap: 1rem;
		align-items: center;
		justify-content: center;
		height: 100%;
	}

	.nav-actions {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	@media (max-width: 768px) {
		nav {
			padding: 0 1rem;
			height: 3.75rem;
		}

		.nav-wrapper {
			gap: 1.5rem;
		}
	}

	@media (max-width: 480px) {
		nav {
			height: 3.5rem;
			padding: 0 0.75rem;
		}

		.nav-wrapper {
			gap: 0.75rem;
		}
	}
</style>
