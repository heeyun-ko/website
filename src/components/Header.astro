---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
import { getUrl } from '../utils/url';
---

<header>
	<nav class="nav-wrapper">
		<a href="/" class="brand">
			<img src="/icon.png" alt="Blog Logo" width="24" height="24" class="brand-icon" />
			<span>Point of View by Eindel</span>
		</a>
		<div class="nav-links">
			<a href="/">Home</a>
			<a href="/posts">Posts</a>
			<a href="/download">Download</a>
		</div>
		<div class="nav-actions">
			<button class="theme-toggle" aria-label="Toggle theme">
				<svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<circle cx="12" cy="12" r="5"></circle>
					<line x1="12" y1="1" x2="12" y2="3"></line>
					<line x1="12" y1="21" x2="12" y2="23"></line>
					<line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
					<line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
					<line x1="1" y1="12" x2="3" y2="12"></line>
					<line x1="21" y1="12" x2="23" y2="12"></line>
					<line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
					<line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
				</svg>
				<svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
				</svg>
			</button>
		</div>
	</nav>
</header>

<script>
	const theme = (() => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
		return localStorage.getItem('theme');
		}
		if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
		return 'dark';
		}
		return 'light';
	})();

	if (theme === 'light') {
		document.documentElement.classList.remove('dark');
	} else {
		document.documentElement.classList.add('dark');
	}

	window.localStorage.setItem('theme', theme);

	const handleToggleClick = () => {
		const element = document.documentElement;
		element.classList.toggle("dark");

		const isDark = element.classList.contains("dark");
		localStorage.setItem("theme", isDark ? "dark" : "light");
	}

	document.querySelector('.theme-toggle').addEventListener('click', handleToggleClick);
</script>

<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: #E8D3B9; /* 진한 베이지 */
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		border-bottom: 1px solid #D4B08C; /* 더 진한 베이지 테두리 */
		transition: var(--theme-transition);
	}

	nav {
		height: 4rem;
		padding: 0 1.5rem;
	}

	.nav-wrapper {
		max-width: 1200px;
		height: 100%;
		margin: 0 auto;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.nav-brand {
		display: flex;
		align-items: center;
		min-width: 0;
	}

	.brand-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		color: rgb(var(--black));
		font-weight: 600;
		padding: 0.5rem;
		margin: -0.5rem;
		border-radius: 0.75rem;
		transition: all 0.2s ease;
	}

	.brand-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2.25rem;
		height: 2.25rem;
		background: rgba(var(--gray-light), 0.5);
		border-radius: 0.85rem;
		padding: 0.25rem;
		flex-shrink: 0;
	}

	.brand-text {
		font-size: 1.125rem;
		font-weight: 600;
		letter-spacing: -0.01em;
		color: rgb(var(--black));
	}

	.nav-links {
		display: flex;
		gap: 2rem;
		align-items: center;
		margin: 0 auto;
	}

	.nav-actions {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.nav-links a {
		color: #000000;
		text-decoration: none;
		font-weight: 400;
		transition: color 0.3s ease;
	}

	.nav-links a:hover {
		color: #f7a7bb;
	}

	.nav-links a[href="/download"] {
		color: inherit;
	}

	.nav-links a[href="/download"]:hover {
		color: #f7a7bb;
	}

	.nav-links a[href="https://eindelpov.com/documents/HeeyunKo_Resume.pdf"] {
		color: #ff0000;
	}

	.nav-links a[href="https://eindelpov.com/documents/HeeyunKo_Resume.pdf"]:hover {
		color: #ff3333;
	}

	@media (max-width: 768px) {
		nav {
			padding: 0 1rem;
			height: 3.75rem;
		}

		.nav-links {
			gap: 1.5rem;
		}

		.brand {
			font-size: 1.25rem;
		}

		.brand::before {
			content: "POV by Eindel";
		}

		.brand span {
			display: none;
		}

		.brand-icon {
			width: 20px;
			height: 20px;
		}
	}

	@media (max-width: 480px) {
		nav {
			height: 3.5rem;
			padding: 0 0.75rem;
		}

		.nav-links {
			gap: 1rem;
		}
	}

	.brand {
		font-size: 1.5rem;
		font-weight: 700;
		color: #333333;
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.brand-icon {
		width: 24px;
		height: 24px;
	}

	.theme-toggle {
		background: none;
		border: none;
		padding: 0.5rem;
		cursor: pointer;
		color: #333333;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 0.5rem;
		transition: all 0.2s ease;
	}

	.theme-toggle:hover {
		background: rgba(0, 0, 0, 0.05);
	}

	.sun-icon, .moon-icon {
		width: 1.25rem;
		height: 1.25rem;
	}

	.sun-icon {
		display: block;
	}

	.moon-icon {
		display: none;
	}

	@media (prefers-color-scheme: dark) {
		.sun-icon {
			display: none;
		}

		.moon-icon {
			display: block;
		}

		.theme-toggle {
			color: #ffffff;
		}

		.theme-toggle:hover {
			background: rgba(255, 255, 255, 0.1);
		}
	}
</style>
