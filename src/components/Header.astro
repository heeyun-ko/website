---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
import { getUrl } from '../utils/url';
---

<header>
	<nav>
		<a href="/" class="brand">
			<div class="brand-icon"></div>
			<span>LUXURY</span>
			<span>Interior</span>
		</a>
		<div class="nav-links">
			<a href="/" class="active">Home</a>
			<a href="/about">About US</a>
			<a href="/services">Services</a>
			<a href="/projects">Projects</a>
			<a href="/team">Team</a>
			<a href="/career">Career</a>
		</div>
		<a href="/contact" class="contact-btn">Contact Us</a>
	</nav>
</header>

<script src="../scripts/theme.js"></script>

<style>
	:root {
		--primary-color: #8FA969;
		--text-color: #291F1E;
		--nav-bg: #FFFCF0;
		--border-color: #9EB4C8;
	}

	nav {
		background-color: var(--nav-bg);
		height: 93.17px;
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0 5rem;
		position: fixed;
		width: 100%;
		top: 0;
		z-index: 100;
	}

	.brand {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
		color: var(--text-color);
	}

	.brand-icon {
		width: 23.89px;
		height: 47.78px;
		background: var(--primary-color);
		position: relative;
	}

	.brand-icon::before,
	.brand-icon::after {
		content: '';
		position: absolute;
		background: var(--primary-color);
	}

	.brand-icon::before {
		width: 18.86px;
		height: 0.98px;
		left: 2.19px;
		bottom: 5.79px;
	}

	.brand-icon::after {
		width: 1.10px;
		height: 32.94px;
		left: 11.07px;
		top: 6.1px;
	}

	.brand span {
		font-size: 22.43px;
		font-weight: 300;
	}

	.brand span:last-child {
		font-weight: 900;
		text-transform: uppercase;
	}

	.nav-links {
		display: flex;
		gap: 2rem;
	}

	.nav-links a {
		color: var(--text-color);
		text-decoration: none;
		font-size: 19.11px;
		opacity: 0.5;
		transition: opacity 0.3s ease;
	}

	.nav-links a:hover {
		opacity: 1;
	}

	.nav-links a.active {
		opacity: 1;
		font-weight: 700;
	}

	.contact-btn {
		padding: 9.56px 19.11px;
		border: 1.19px solid var(--border-color);
		border-radius: 4px;
		color: var(--text-color);
		text-decoration: none;
		font-size: 16.72px;
	}

	@media (max-width: 768px) {
		nav {
			padding: 0 1rem;
			height: 70px;
		}

		.nav-links {
			display: none;
		}
	}
</style>
